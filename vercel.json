{
  "version": 2,
  "builds": [
    {
      "src": "server/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",  // Needed for Whisper model
        "runtime": "python3.9"     // Specify Python version
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/main.py"
    }
  ]
}
